int val = 0 ;


sub forward()
{
 OnFwd(OUT_AB,60);
 Wait(1500);
 Off(OUT_AB);

}

sub backward()
{
 OnRev(OUT_AC,60);
 Wait(1500);
 Off(OUT_AC);

}


task main()
{
 if (val=0)
 {
    forward();
    val = val + 1;
 }
 else if (val = 1)
 {
    backward();
    val = val + 1;
 }
 else
 {
 val = 0;
 }
 }

